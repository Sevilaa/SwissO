<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingEnd="5dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/sl_startnummer"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintEnd_toStartOf="@id/sl_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sl_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toStartOf="@id/sl_kat"
        app:layout_constraintStart_toEndOf="@id/sl_startnummer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sl_kat"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toStartOf="@id/sl_starttime"
        app:layout_constraintStart_toEndOf="@id/sl_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sl_starttime"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sl_kat"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>