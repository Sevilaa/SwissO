<?xml version="1.0" encoding="utf-8"?>
<ch.swisso.SingleRunnerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp">


    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/rl_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rl_rank"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rl_name"
        app:layout_constraintStart_toEndOf="@id/rl_checkbox"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="14."/>

    <TextView
        android:id="@+id/rl_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toTopOf="@id/rl_club"
        app:layout_constraintEnd_toStartOf="@id/rl_cat"
        app:layout_constraintStart_toEndOf="@id/rl_rank"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Max Mustermann" />

    <TextView
        android:id="@+id/rl_club"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rl_location"
        app:layout_constraintStart_toEndOf="@id/rl_rank"
        app:layout_constraintTop_toBottomOf="@id/rl_name"
        tools:text="OLG Musterort" />

    <TextView
        android:id="@+id/rl_location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="5dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="@id/rl_club"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rl_club"
        app:layout_constraintTop_toTopOf="@id/rl_club"
        tools:text="Musterstetten am Musterberg" />

    <TextView
        android:id="@+id/rl_cat"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="5dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="@+id/rl_name"
        app:layout_constraintEnd_toStartOf="@id/rl_zielzeit"
        app:layout_constraintStart_toEndOf="@id/rl_name"
        app:layout_constraintTop_toTopOf="@+id/rl_name"
        tools:text="sCool" />

    <TextView
        android:id="@+id/rl_zielzeit"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="@+id/rl_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rl_cat"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/dns" />

</ch.swisso.SingleRunnerLayout>