<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="ch.swisso.OverviewFragment"
        android:label="OverviewFragment"
        tools:layout="@layout/fragment_overview">
        <action
            android:id="@+id/action_overviewFragment_to_profilFragment"
            app:destination="@id/profilFragment" />
        <action
            android:id="@+id/action_overviewFragment_to_ranglistFragment"
            app:destination="@id/ranglistFragment" />
        <action
            android:id="@+id/action_overviewFragment_to_startlistFragment"
            app:destination="@id/startlistFragment" />
    </fragment>
    <fragment
        android:id="@+id/profilFragment"
        android:name="ch.swisso.ProfilFragment"
        android:label="@string/profil"
        tools:layout="@layout/fragment_profil"/>
    <fragment
        android:id="@+id/ranglistFragment"
        android:name="ch.swisso.RanglistFragment"
        android:label="RanglistFragment"
        tools:layout="@layout/fragment_list"/>
    <fragment
        android:id="@+id/startlistFragment"
        android:name="ch.swisso.StartlistFragment"
        android:label="StartlistFragment"
        tools:layout="@layout/fragment_list" />
</navigation>